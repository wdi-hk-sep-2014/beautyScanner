<h1>Listing merchants</h1>


<%= form_tag merchants_path, :method => 'get' do %>
  <p>
    <%= select_tag "search", options_for_select([ "Beauty Salon", "Massage", "Hair Salon" ], params[:search]) %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Category</th>
      <th>Location</th>
      <th>Phone</th>
      <th>Website</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @merchants.each do |merchant| %>
      <tr>
        <td><%= merchant.name %></td>
        <td><%= merchant.address %></td>
        <td><%= merchant.category %></td>
        <td><%= merchant.location %></td>
        <td><%= merchant.phone %></td>
        <td><%= merchant.website %></td>
        <td><%= merchant.email %></td>
        <td><%= link_to 'Show', merchant %></td>
        <td><%= link_to 'Edit', edit_merchant_path(merchant) %></td>
        <td><%= link_to 'Destroy', merchant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Merchant', new_merchant_path %>
