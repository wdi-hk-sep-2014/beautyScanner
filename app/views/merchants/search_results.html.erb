
<%= form_tag("/search", method: "get") do %>
  
  <%= select_tag 'category', options_from_collection_for_select(@categories,'id', 'name', @selected_category_id), class: 'search btn btn-default btn-lg myButton' %>
  
  <%= select_tag 'location', options_from_collection_for_select(@locations, 'id', 'name', @selected_location_id), class: 'search btn btn-default btn-lg myButton' %>

<% end %>

<table class="table table-hover">
  <tbody>
    <% @merchants.each do |m| %>
      <tr class="<%= cycle('oddrow', 'evenrow') -%>">
        <td><a href="/merchants/<%= m.id %>"><%= m.name %>
        <br><span class="glyphicon glyphicon-map-marker"></span><%= m.address %></td></a>
        <td><a href="/merchants/<%= m.id %>"><br><%= m.reviews_score %></a></td>
      </tr>
    <% end %>
  </tbody>
</table>
<button type="button" class="btn btn-default btn-lg btn-block">
  <%= link_to 'Map view', map_category_path(@selected_category_id) %>
  </button>
